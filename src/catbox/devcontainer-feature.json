{
  "name": "Catbox",
  "id": "catbox",
  "version": "2.0.0",
  "description": "Shikanime's development environment",
  "options": {
    "multiUser": {
      "type": "boolean",
      "default": true,
      "description": "Perform a multi-user install (instead of single user)"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils",
    "ghcr.io/devcontainers/features/nix"
  ],
  "postCreateCommand": "/usr/local/share/catbox-install-home.sh",
  "mounts": [
    {
      "source": "catbox-nix",
      "target": "/nix",
      "type": "volume"
    },
    {
      "source": "catbox-cache-pip",
      "target": "/home/vscode/.cache/pip",
      "type": "volume"
    },
    {
      "source": "catbox-cache-npm",
      "target": "/home/vscode/.cache/npm",
      "type": "volume"
    },
    {
      "source": "catbox-cache-mix",
      "target": "/home/vscode/.cache/mix",
      "type": "volume"
    },
    {
      "source": "catbox-cache-huggingface",
      "target": "/home/vscode/.cache/huggingface",
      "type": "volume"
    }
  ],
  "containerEnv": {
    "npm_config_cache": "/home/vscode/.cache/npm",
    "MIX_HOME": "/home/vscode/.cache/mix"
  }
}