{
  "name": "Catbox",
  "id": "catbox",
  "version": "2.1.0",
  "description": "Shikanime's development environment",
  "options": {
    "multiUser": {
      "type": "boolean",
      "default": true,
      "description": "Perform a multi-user install (instead of single user)"
    },
    "flakeUri": {
      "type": "string",
      "default": "github:shikanime/shikanime",
      "description": "Optional URI to a Nix Flake to install in profile."
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils",
    "ghcr.io/devcontainers/features/nix"
  ],
  "postCreateCommand": "/usr/local/share/catbox-install-home.sh",
  "mounts": [
    {
      "source": "nix",
      "target": "/nix",
      "type": "volume"
    },
    {
      "source": "pip-cache",
      "target": "/home/vscode/.cache/pip",
      "type": "volume"
    },
    {
      "source": "npm-cache",
      "target": "/home/vscode/.npm",
      "type": "volume"
    },
    {
      "source": "mix-cache",
      "target": "/home/vscode/.mix",
      "type": "volume"
    },
    {
      "source": "nix-cache",
      "target": "/home/vscode/.cache/nix",
      "type": "volume"
    },
    {
      "source": "huggingface-cache",
      "target": "/home/vscode/.cache/huggingface",
      "type": "volume"
    }
    {
      "source": "cargo-cache",
      "target": "/home/vscode/.cargo",
      "type": "volume"
    }
  ]
}